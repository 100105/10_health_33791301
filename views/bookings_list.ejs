<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
<header>
  <h1><%= title %></h1>
  <nav>
    <a href="/">Home</a>
    <a href="/bookings/add">Add Booking</a>
    <a href="/bookings/search">Search</a>
  </nav>
</header>

<div class="container">
  <% if (!bookings || bookings.length === 0) { %>
    <p>No bookings found.</p>
  <% } else { %>
    <table>
      <tr>
        <th>ID</th>
        <th>Patient</th>
        <th>Date</th>
        <th>Time</th>
        <th>Reason</th>
        <% if (isLoggedIn) { %><th>Action</th><% } %>
      </tr>

      <% bookings.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.patient_name %></td>
          <td><%= b.appointment_date %></td>
          <td><%= b.appointment_time %></td>
          <td><%= b.reason %></td>

          <% if (isLoggedIn) { %>
          <td>
            <form method="POST" action="/bookings/delete/<%= b.id %>">
              <input type="submit" value="Delete">
            </form>
          </td>
          <% } %>
        </tr>
      <% }) %>
    </table>
  <% } %>
</div>
</body>
</html>
